{
  "name": "@nekohack/useful",
  "version": "1.0.0",
  "description": "",
  "private": false,
  "main": "lib/index.js",
  "module": "esm/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "esm",
    "lib"
  ],
  "license": "MIT",
  "author": "jiyuujin",
  "repository": {
    "type": "git",
    "url": "https://github.com/jiyuujin/useful.git"
  },
  "bugs": {
    "url": "https://github.com/jiyuujin/useful/issues"
  },
  "keywords": [
    "react",
    "typescript"
  ],
  "scripts": {
    "build:lib": "tsc -p tsconfig.build.json",
    "build:esm": "tsc -p tsconfig.esm.build.json",
    "build": "npm run clear && run-s build:lib build:esm",
    "clear": "rm -rf esm/ lib/",
    "format": "prettier --write \"**/*.{js,jsx,json,ts,tsx,md,mdx,css,html,yml,yaml,scss,sass}\" --ignore-path .gitignore",
    "lint": "eslint ./ --ext .ts,.tsx",
    "lint:fix": "eslint ./ --ext .ts,.tsx --fix",
    "test": "jest",
    "test-cover": "jest --coverage",
    "test:w": "npm run test-cover -- --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-private-methods": "^7.14.5",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@nekohack/eslint-config-react": "^0.8.0",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.2",
    "@types/prop-types": "^15.7.4",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "babel-jest": "^27.1.0",
    "enzyme": "^3.11.0",
    "eslint": "^7.32.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "fibers": "^5.0.0",
    "jest": "^27.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.2"
  },
  "peerDependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "jest": {
    "testURL": "http://localhost:8080",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.(js|jsx)?$": "babel-jest",
      "^.+\\.(ts|tsx)?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleDirectories": [
      "node_modules"
    ],
    "collectCoverageFrom": [
      "src/components/**/*.{ts,tsx}"
    ]
  }
}
